<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
         http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">
	<!-- 给出要扫描的包 -->
	<context:component-scan base-package="com.star.Cotroller"></context:component-scan>
		
	<!-- 主要是使用注解来实现这个 -->
	<!-- web.xml中配置的servlet / 是除了jsp文件外都过滤 也包括静态资源 所以要配置 一下让 这个不过滤静态资源 -->
	<!-- 这是注解驱动 -->
	<mvc:annotation-driven></mvc:annotation-driven>
	<!-- 这是配置要放行的静态资源 **表示全部 -->
	<mvc:resources location="/js/" mapping="/js/**"></mvc:resources>
	<mvc:resources location="/files/" mapping="/files/**"></mvc:resources>
	<mvc:resources location="/images/" mapping="/images/**"></mvc:resources>
	
	<!-- MultipartResovler解析器 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="3000"></property>
		<!-- 字节 -->
	</bean>
	
	
</beans>